
<h1>Listing fightings</h1>

    <% @fightings.each do |fighting| %>
        <div class="fighting_item">
            <%= link_to fighting.name, fighting %>

            <%= form_for fighting, url:{action:'add_record'}, method:'post' do |f| %>
                <%= f.text_field :name, name:'notes' %>
                <%= f.hidden_field :id %>
                <%= f.submit "打卡", class: 'pure-button pure-button-primary' %>
            <% end %>

        </div>
    <% end %>
<br>

<%= link_to 'New Fighting', new_fighting_path %>
